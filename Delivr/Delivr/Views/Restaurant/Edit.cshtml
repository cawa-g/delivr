@model Delivr.Models.Restaurant

@{
    ViewBag.Title = "Edit";
}

<h2>Edit</h2>

@using (Html.BeginForm()) {
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true)

    <fieldset>
        <legend>Restaurant</legend>

        @Html.HiddenFor(model => model.id)

        <div>
            @Html.LabelFor(model => model.nom)
