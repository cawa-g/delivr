@model Delivr.Models.Restaurant

@{
    ViewBag.Title = "Edit restaurant";
}
<div class="jumbotron padded">
    <div class="container">
        <h2>@ViewBag.Title</h2>

        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()
            @Html.ValidationSummary(true)

            <form class="form-horizontal">
                @Html.HiddenFor(model => model.RestaurantId)
                <div class="form-group">
                    @(Html.LabelFor(model => model.nom, new { @class = "col-sm-2 control-label" }))
                    <div class="col-sm-10">
                        @(Html.TextBoxFor(model => model.nom, new { @class = "form-control form-input" }))
                        @Html.ValidationMessageFor(model => model.nom)
                    </div>
                    @(Html.LabelFor(model => model.Restaurateur, new { @class = "col-sm-2 control-label" }))
                    <div class="col-sm-10">
                        @(Html.DropDownListFor(model => model.UserId, (List<SelectListItem>)ViewBag.DropDownRestaurateurs, new { @class = "form-control form-input" }))
                        @Html.ValidationMessageFor(model => model.nom)
                    </div>
                    @(Html.LabelFor(model => model.Rue, new { @class = "col-sm-2 control-label" }))
                    <div class="col-sm-10">
                        @(Html.TextBoxFor(model => model.Rue, new { @class = "form-control form-input" }))
                        @Html.ValidationMessageFor(model => model.Rue)
                    </div>
                    @(Html.LabelFor(model => model.Telephone, new { @class = "col-sm-2 control-label" }))
                    <div class="col-sm-10">
                        @(Html.TextBoxFor(model => model.Telephone, new { @class = "form-control form-input" }))
                        @Html.ValidationMessageFor(model => model.Telephone)
                    </div>
                    @(Html.LabelFor(model => model.CodeCivique, new { @class = "col-sm-2 control-label" }))
                    <div class="col-sm-10">
                        @(Html.TextBoxFor(model => model.CodeCivique, new { @class = "form-control form-input" }))
                        @Html.ValidationMessageFor(model => model.CodeCivique)
                    </div>
                    @(Html.LabelFor(model => model.CodePostale, new { @class = "col-sm-2 control-label" }))
                    <div class="col-sm-10">
                        @(Html.TextBoxFor(model => model.CodePostale, new { @class = "form-control form-input" }))
                        @Html.ValidationMessageFor(model => model.CodePostale)
                    </div>
                <div class="form-group">
                    <div class="col-sm-12">
                        <input type="submit" class="btn btn-primary margin-top" value="Save" />
                    </div>
                </div>
            </form>
        }
    </div>
    <div class="container">
        <hr />
        @(Html.ActionLink("Back to listing", "Index", null, new { @class = "btn btn-default btn-lg" }))
    </div>
</div>
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
