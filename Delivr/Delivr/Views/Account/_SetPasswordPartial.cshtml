@model Delivr.Models.LocalPasswordModel

<p>
    Vous n’avez pas de mot de passe local pour ce site. Ajoutez un mot de passe
    local, pour pouvoir vous connecter sans connexion externe.
</p>

@using (Html.BeginForm("Manage", "Account")) {
    @Html.AntiForgeryToken()
    @Html.ValidationSummary()

    <form class="form-horizontal">
        <div class="form-group">
            @(Html.LabelFor(m => m.NewPassword, new { @class = "col-sm-3 control-label" }))
            <div class="col-sm-9">
                @Html.PasswordFor(m => m.NewPassword, new { @class = "form-control form-input", Textmode = "Password" })
                @Html.ValidationMessageFor(model => model.NewPassword)
            </div>
        </div>
        <div class="form-group">
            @(Html.LabelFor(m => m.ConfirmPassword, new { @class = "col-sm-3 control-label" }))
            <div class="col-sm-9">
                @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "form-control form-input", Textmode = "Password" })
                @Html.ValidationMessageFor(model => model.ConfirmPassword)
            </div>
        </div>
    </form>
}
