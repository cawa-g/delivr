@model Delivr.Models.AddAdresseModel

@{
    ViewBag.Title = "AddAdresse";
}
<div class="jumbotron padded">
    <div class="container">
        <h2>AddAdresse</h2>

        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()
            @Html.ValidationSummary(true)
    <form class="form-horizontal">
        <div class="form-group">
            @(Html.LabelFor(model => model.Rue, new { @class = "col-sm-2 control-label" }))
            <div class="col-sm-10">
                @(Html.TextBoxFor(model => model.Rue, new { @class = "form-control form-input" }))
                @Html.ValidationMessageFor(model => model.Rue)
            </div>
        </div>
        <div class="form-group">
            @(Html.LabelFor(model => model.NumeroCivique, new { @class = "col-sm-2 control-label" }))
            <div class="col-sm-10">
                @(Html.TextBoxFor(model => model.NumeroCivique, new { @class = "form-control form-input", type = "number" }))
                @Html.ValidationMessageFor(model => model.NumeroCivique)
            </div>
        </div>
        <div class="form-group">
            @(Html.LabelFor(model => model.CodePostale, new { @class = "col-sm-2 control-label" }))
            <div class="col-sm-10">
                @(Html.TextBoxFor(model => model.CodePostale, new { @class = "form-control form-input"}))
                @Html.ValidationMessageFor(model => model.CodePostale)
            </div>
        </div>
        <div class="form-group">
            <div class="col-sm-12">
                <input type="submit" class="btn btn-primary margin-top" value="Save" />
            </div>
        </div>
</form>
        }
    </div>
    <div class="container">
        <hr />
        @(Html.ActionLink("Back to account", "Edit", null, new { @class = "btn btn-default" }))
    </div>
</div>
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
