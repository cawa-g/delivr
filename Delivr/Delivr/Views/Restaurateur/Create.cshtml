@model Delivr.Models.CreateModel

@{
    ViewBag.Title = "Ajouter un restaurateur";
    ViewBag.Message = "Formulaire d'ajout";
}
<div class="jumbotron padded">
    <div class="container">
        <h2>@ViewBag.Title</h2>
        <h3>@ViewBag.Message</h3>
        <hr />
        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()
            @Html.ValidationSummary(true)

            <form class="form-horizontal">

                <div class="form-group">
                    @(Html.LabelFor(m => m.Email, new { @class = "col-sm-3 control-label" }))
                    <div class="col-sm-9">
                        @(Html.TextBoxFor(m => m.Email, new { @class = "form-control form-input" }))
                        @Html.ValidationMessageFor(model => model.Email)
                    </div>
                </div>
                <div class="form-group">
                    @(Html.LabelFor(m => m.Prenom, new { @class = "col-sm-3 control-label" }))
                    <div class="col-sm-9">
                        @(Html.TextBoxFor(m => m.Prenom, new { @class = "form-control form-input" }))
                        @Html.ValidationMessageFor(model => model.Prenom)
                    </div>
                </div>
                <div class="form-group">
                    @(Html.LabelFor(m => m.Nom, new { @class = "col-sm-3 control-label" }))
                    <div class="col-sm-9">
                        @(Html.TextBoxFor(m => m.Nom, new { @class = "form-control form-input" }))
                        @Html.ValidationMessageFor(model => model.Nom)
                    </div>
                </div>
                <div class="form-group">
                    @(Html.LabelFor(m => m.Telephone, new { @class = "col-sm-3 control-label" }))
                    <div class="col-sm-9">
                        @(Html.TextBoxFor(m => m.Telephone, new { @class = "form-control form-input" }))
                        @Html.ValidationMessageFor(model => model.Telephone)
                    </div>
                </div>
                <div class="form-group">
                    @(Html.LabelFor(m => m.Rue, new { @class = "col-sm-3 control-label" }))
                    <div class="col-sm-9">
                        @(Html.TextBoxFor(m => m.Rue, new { @class = "form-control form-input" }))
                        @Html.ValidationMessageFor(model => model.Rue)
                    </div>
                </div>
                <div class="form-group">
                    @(Html.LabelFor(m => m.NumeroCivique, new { @class = "col-sm-3 control-label" }))
                    <div class="col-sm-9">
                        @(Html.TextBoxFor(m => m.NumeroCivique, new { @class = "form-control form-input", type = "number" }))
                        @Html.ValidationMessageFor(model => model.NumeroCivique)
                    </div>
                </div>
                <div class="form-group">
                    @(Html.LabelFor(m => m.CodePostale, new { @class = "col-sm-3 control-label" }))
                    <div class="col-sm-9">
                        @(Html.TextBoxFor(m => m.CodePostale, new { @class = "form-control form-input" }))
                        @Html.ValidationMessageFor(model => model.CodePostale)
                    </div>
                </div>
                <div class="form-group">
                    @(Html.LabelFor(m => m.DateNaissance, new { @class = "col-sm-3 control-label" }))
                    <div class="col-sm-9">
                        @(Html.TextBoxFor(m => m.DateNaissance, new { @class = "form-control form-input", type = "date" }))
                        @Html.ValidationMessageFor(model => model.DateNaissance)
                    </div>
                </div>
                <div class="form-group">
                    @(Html.LabelFor(m => m.restaurantId, new { @class = "col-sm-3 control-label" }))
                    <div class="col-sm-9">
                        @(Html.DropDownListFor(m => m.DateNaissance, (List<SelectListItem>)ViewBag.DropDownRestaurants, new { @class = "form-control form-input" }))
                        @Html.ValidationMessageFor(model => model.DateNaissance)
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-sm-12">
                        <input type="submit" class="btn btn-primary margin-top" value="Soumettre" />
                    </div>
                </div>
            </form>
        }
    </div>
    <div class="container">
        <hr />
        @(Html.ActionLink("Back to listing", "Index", null, new { @class = "btn btn-default" }))
    </div>
</div>
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
